<h1>Listing users</h1>
<%= link_to 'New user', new_user_path %>

<table>
  <tr>
    <th>Username</th>
    <!--<th>Hash password</th>
    <th>Salt</th>-->
    <th>First name</th>
    <th>Last name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Membership</th>
    <th>Status</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.first_name %></td>
    <td><%=h user.last_name %></td>
    <td><%=h user.address %></td>
    <td><%=h user.city %></td>
    <td><%=h user.state %></td>
    <td><%=h user.country %></td>
    <td><%=h user.membership %></td>
    <td><%=h user.status %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

