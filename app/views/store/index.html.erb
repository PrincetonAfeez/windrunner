<% if @products.size > 0 %>
<div class="legend"><%= I18n.t('msg.sale_off') %></div><br />
  <% for product in @products -%>
    <div class="entry">
      <%= image_tag product.image_url, :height => '64', :width => '64'%>
      <h3><%=h product.name %></h3>
      <%= product.description if !product.description.nil?%>
      <div class="price-line">
        <span class="price" >Price: <%= number_to_currency(product.special_price) %></span>

    <%#= button_to "Add to Cart", :action => 'add_to_cart', :id => product %>
        <% form_remote_tag :url => {:action => 'add_to_cart', :id => product} do %>
          <%= submit_tag "Add to cart" %>
        <% end %>

      </div>
    </div>
  <% end %>
<% else %>
  <div class="legend">We're sorry but no sale-off today.</div>
  <br />
<% end %>
