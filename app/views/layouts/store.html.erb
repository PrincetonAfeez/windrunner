<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
  <head>
    <title>Traxex Windrunner</title>
    <%= stylesheet_link_tag "scaffold" , :media => "all" %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body id="store">
<%# *top section %>
    <div id="banner">
      <%= image_tag("/images/unused/logo.png", :width => 48, :height => 48 ) %>
      <%= @page_title || "Welcome to WindRunner shop" %>
    </div>
<%# *main section %>
    <div id="columns">
      <div id="side">
        <%= link_to "Home", root_path %><br />
        <%= link_to "Store", store_path %><br />        
        <%= link_to "Products", products_path %><br />
        <%= link_to "Settings", settings_path %><br />
        <%= link_to "Contact", contact_path %><br />
        <%= link_to "Help", help_path %><br />
        <%= link_to "About", about_path %><br />
        <br />
        <br />
        <br />
        <div id="cart">
          <%= render(:partial => "cart", :object => @cart) %>
        </div>
      </div>
      
      <div id="main">
        <% if flash[:notice] -%>
          <div id="notice"><%= flash[:notice] %></div>
        <% end -%>
          
        <%= yield :layout %>
      </div>
    </div>
<%# *bottom section %>
    <div id="banner_bottom">
      <%= image_tag("/images/unused/logo.png", :width => 24, :height => 24 ) %>
      Current time is <%= Time.now %>
    </div>
  </body>
</html>
